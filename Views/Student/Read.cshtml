@model List<Student_CRUD_MVC_EF.Models.Entities.Student>

<h1 style="text-align:center; margin-bottom:40px;">List of Students</h1>

<a class="btn btn-primary" asp-action="Add" style="margin-bottom:10px;">Add Student</a>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Photo</th> 
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    @if (!string.IsNullOrEmpty(student.PhotoPath))
                    {
                        <img src="@student.PhotoPath" alt="Photo" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@student.Id" style="display:inline-block;">
                        <input type="hidden" name="Id" value="@student.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>
